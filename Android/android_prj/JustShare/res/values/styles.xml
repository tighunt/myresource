<?xml version="1.0" encoding="UTF-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Weibo -->
    <style name="write_mblog_expression_btn_left">
        <item name="android:textSize">15.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/expression_panel_btn_left</item>
        <item name="android:padding">5.0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">5.0dip</item>
        <item name="android:button">@null</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="write_mblog_expression_btn_middle">
        <item name="android:textSize">15.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/expression_panel_btn_middle</item>
        <item name="android:padding">5.0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="write_mblog_expression_btn_right">
        <item name="android:textSize">15.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/expression_panel_btn_right</item>
        <item name="android:padding">5.0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">5.0dip</item>
        <item name="android:button">@null</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="ContentOverlay" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="loading_small" parent="@android:style/Widget.ProgressBar.Small">
        <item name="android:indeterminateDrawable">@anim/loading</item>
        <item name="android:layout_width">31dip</item>
        <item name="android:layout_height">31dip</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
	
    <style name="widget_listview">
        <item name="android:layout_width">fill_parent</item>
   		<item name="android:layout_height">wrap_content</item>
       	<item name="android:cacheColorHint">#000000</item>
       	<item name="android:layout_weight">1</item>
       	<item name="android:listSelector">@drawable/listview_item_selector</item>
       	<item name="android:divider">@drawable/listview_divider_line</item>
       	<item name="android:dividerHeight">1.0dip</item>
       	<item name="android:fadingEdge">none</item>
       	<item name="android:scrollingCache">false</item>
    </style>
 
    
    <!-- GreenDroid UI Tool -->
    <style name="GreenDroid" />

    <style name="GreenDroid.Widget" />

    <style name="GreenDroid.Widget.QuickAction" />

    <style name="GreenDroid.Widget.QuickAction.Bar" />

    <style name="GreenDroid.Widget.QuickAction.Grid">
        <item name="android:padding">7dp</item>
        <item name="android:listSelector">@drawable/gd_quick_action_grid_selector</item>
        <item name="android:background">@drawable/gd_quick_action_grid_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:fadingEdgeLength">0dp</item>
        <item name="android:stretchMode">columnWidth</item>
        <item name="android:verticalSpacing">7dp</item>
        <item name="android:numColumns">3</item>
    </style>

    <style name="GreenDroid.Widget.QuickAction.Item">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#333</item>
    </style>

    <style name="GreenDroid.Widget.QuickAction.Bar.Item" parent="@style/GreenDroid.Widget.QuickAction.Item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minWidth">80dp</item>
        <item name="android:background">@drawable/gd_quick_action_bar_item</item>
    </style>

    <style name="GreenDroid.Widget.QuickAction.Grid.Item" parent="@style/GreenDroid.Widget.QuickAction.Item">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">65dp</item>
    </style>

    <!-- GreenDroid PopDownMenu -->
    <style name="GreenDroid.Animation" />

    <style name="GreenDroid.Animation.PopDown" />

    <style name="GreenDroid.Animation.PopDown.Left">
        <item name="@android:windowEnterAnimation">@anim/gd_grow_from_topleft_to_bottomright</item>
        <item name="@android:windowExitAnimation">@anim/gd_shrink_from_bottomright_to_topleft</item>
    </style>

    <style name="GreenDroid.Animation.PopDown.Right">
        <item name="@android:windowEnterAnimation">@anim/gd_grow_from_topright_to_bottomleft</item>
        <item name="@android:windowExitAnimation">@anim/gd_shrink_from_bottomleft_to_topright</item>
    </style>

    <style name="GreenDroid.Animation.PopDown.Center">
        <item name="@android:windowEnterAnimation">@anim/gd_grow_from_top</item>
        <item name="@android:windowExitAnimation">@anim/gd_shrink_from_bottom</item>
    </style>

    <style name="GreenDroid.Animation.PopUp" />

    <style name="GreenDroid.Animation.PopUp.Left">
        <item name="@android:windowEnterAnimation">@anim/gd_grow_from_bottomleft_to_topright</item>
        <item name="@android:windowExitAnimation">@anim/gd_shrink_from_topright_to_bottomleft</item>
    </style>

    <style name="GreenDroid.Animation.PopUp.Right">
        <item name="@android:windowEnterAnimation">@anim/gd_grow_from_bottomright_to_topleft</item>
        <item name="@android:windowExitAnimation">@anim/gd_shrink_from_topleft_to_bottomright</item>
    </style>

    <style name="GreenDroid.Animation.PopUp.Center">
        <item name="@android:windowEnterAnimation">@anim/gd_grow_from_bottom</item>
        <item name="@android:windowExitAnimation">@anim/gd_shrink_from_top</item>
    </style>

</resources>