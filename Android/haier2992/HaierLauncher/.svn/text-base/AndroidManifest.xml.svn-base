<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.haier.launcher"
    android:sharedUserId="android.uid.system">

    <original-package android:name="com.haier.launcher2" />

    <permission
        android:name="com.haier.launcher.permission.INSTALL_SHORTCUT"
        android:permissionGroup="android.permission-group.SYSTEM_TOOLS"
        android:protectionLevel="normal"
        android:label="@string/permlab_install_shortcut"
        android:description="@string/permdesc_install_shortcut" />
    <permission
        android:name="com.haier.launcher.permission.UNINSTALL_SHORTCUT"
        android:permissionGroup="android.permission-group.SYSTEM_TOOLS"
        android:protectionLevel="normal"
        android:label="@string/permlab_uninstall_shortcut"
        android:description="@string/permdesc_uninstall_shortcut"/>
    <permission
        android:name="com.haier.launcher.permission.READ_SETTINGS"
        android:permissionGroup="android.permission-group.SYSTEM_TOOLS"
        android:protectionLevel="normal"
        android:label="@string/permlab_read_settings"
        android:description="@string/permdesc_read_settings"/>
    <permission
        android:name="com.haier.launcher.permission.WRITE_SETTINGS"
        android:permissionGroup="android.permission-group.SYSTEM_TOOLS"
        android:protectionLevel="normal"
        android:label="@string/permlab_write_settings"
        android:description="@string/permdesc_write_settings"/>

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.SET_WALLPAPER" />
    <uses-permission android:name="android.permission.SET_WALLPAPER_HINTS" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.BIND_APPWIDGET" />
    <uses-permission android:name="com.haier.launcher.permission.READ_SETTINGS" />
    <uses-permission android:name="com.haier.launcher.permission.WRITE_SETTINGS" />
    <uses-permission android:name="com.mstar.permission.RW_TV_DATA" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />

    <application
        android:name="com.haier.launcher2.LauncherApplication"
        android:label="@string/application_name"
        android:icon="@drawable/ic_launcher_home"
        android:hardwareAccelerated="@bool/config_hardwareAccelerated"
        android:largeHeap="@bool/config_largeHeap">
        <activity
            android:name="com.haier.launcher2.Launcher"
            android:launchMode="singleTask"
            android:clearTaskOnLaunch="true"
            android:stateNotNeeded="true"
            android:theme="@style/Theme"
            android:windowSoftInputMode="adjustPan"
	    android:configChanges="keyboard|orientation|screenSize|keyboardHidden"
            android:screenOrientation="nosensor">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.HOME" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.MONKEY"/>
            </intent-filter>
        </activity>

        <activity
            android:name="com.haier.launcher2.WallpaperChooser"
            style="@style/Theme.WallpaperPicker"
            android:label="@string/pick_wallpaper"
            android:icon="@drawable/ic_launcher_wallpaper"
            android:finishOnCloseSystemDialogs="true"
            android:process=":wallpaper_chooser">
            <intent-filter>
                <action android:name="android.intent.action.SET_WALLPAPER" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <meta-data android:name="android.wallpaper.preview"
                android:resource="@xml/wallpaper_picker_preview" />
        </activity>

        <activity android:name="com.haier.launcher2.RocketLauncher"
            android:label="@string/dream_name"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.DREAM" />
            </intent-filter>
        </activity>

        <!-- Intent received used to install shortcuts from other applications -->
        <receiver
            android:name="com.haier.launcher2.InstallShortcutReceiver"
            android:permission="com.haier.launcher.permission.INSTALL_SHORTCUT">
            <intent-filter>
                <action android:name="com.haier.launcher.action.INSTALL_SHORTCUT" />
            </intent-filter>
        </receiver>

        <!-- Intent received used to uninstall shortcuts from other applications -->
        <receiver
            android:name="com.haier.launcher2.UninstallShortcutReceiver"
            android:permission="com.haier.launcher.permission.UNINSTALL_SHORTCUT">
            <intent-filter>
                <action android:name="com.haier.launcher.action.UNINSTALL_SHORTCUT" />
            </intent-filter>
        </receiver>
        
        <receiver
            android:name="com.haier.launcher2.LanguageOrWallpaperSettingReceiver">
            <intent-filter>
                <action android:name="com.android.settings.languageOrWallpaperSetting.action" />
            </intent-filter>
        </receiver>
        
        <receiver
            android:name="com.haier.launcher2.LauncherSetStorageReceiver">
            <intent-filter>
                <action android:name="com.haier.launcher.storage" />
            </intent-filter>
        </receiver>
        
        <!-- The settings provider contains Home's data, like the workspace favorites -->
        <provider
            android:name="com.haier.launcher2.LauncherProvider"
            android:authorities="com.haier.launcher2.settings"
            android:writePermission="com.haier.launcher.permission.WRITE_SETTINGS"
            android:readPermission="com.haier.launcher.permission.READ_SETTINGS" />

    </application>
</manifest>
