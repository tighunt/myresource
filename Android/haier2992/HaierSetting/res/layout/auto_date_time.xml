<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/auto_date_time_rl"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/set_button"
    android:minHeight="60dip" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dip"
        android:layout_centerVertical="true"
        android:paddingLeft="60dip"
        android:text="@string/date_time_auto"
        android:textColor="#FFFFFFFF"
        android:textSize="22sp" />

    <CheckBox
        android:id="@+id/checkbox_auto_date_time"
        android:layout_width="140dip"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="40dip"
        android:visibility="invisible"
        android:button="@drawable/custom_checkbox" />
    <CheckBox
        android:id="@+id/checkbox_auto_date_time_en"
        android:layout_width="140dip"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="40dip"
        android:visibility="invisible"
        android:button="@drawable/custom_checkbox_en" />

</RelativeLayout>